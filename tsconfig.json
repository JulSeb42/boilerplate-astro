{
	"compilerOptions": {
		"baseUrl": "./src",
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"verbatimModuleSyntax": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	},
	"extends": ["astro/tsconfigs/strict", "astro/tsconfigs/base"],
	"include": ["client/.astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
